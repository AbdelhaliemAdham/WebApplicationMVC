@using Domain.Models
@model IEnumerable<Villa>



<div class="w-100 card bg-gradient bg-success p-4">
	<div class="row">
		<div class="col-10 text-center">
			<h2 class="text-white text-capitalize font-monospace">Villas</h2>
		</div>
	</div>
	
</div>
<div class="card-body border bg-white">
	<div class="row p-2">
		<div class="text-end">
			<a asp-controller="Villa" asp-action="Create" class="btn btn-dark w-25">
				<i class="bi bi-patch-plus"></i> Create New Villa
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Sqft</th>
			<th>Occupancy</th>
			<th></th>

		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.Price</td>
				<td>@obj.Sqfeet</td>
				<td>@obj.Occupancy</td>
				<td>
					<div class="w-100 btn-group" role="group">
						<a class="btn btn-success mx-2" asp-controller="Villa" asp-action="Update" asp-route-VillaId="@obj.Id" >
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a class="btn btn-danger mx-2" asp-controller="Villa" asp-action="Delete" asp-route-VillaId="@obj.Id">
							<i class="bi bi-trach-fill"></i> Delete
						</a>
					</div>
				</td>

			</tr>
		}
	</tbody>
</table>
