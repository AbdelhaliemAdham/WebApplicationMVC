@using Domain.Models
@model IEnumerable<VillaNumber>



<div class="w-100 card bg-gradient bg-success p-4">
	<div class="row">
		<div class="col-10 text-center">
			<h2 class="text-white text-capitalize font-monospace">Villa Numbers</h2>
		</div>
	</div>

</div>
<div class="card-body border bg-white">
	<div class="row p-2">
		<div class="text-end">
			<a asp-controller="VillaNumber" asp-action="Create" class="btn btn-dark w-25">
				<i class="bi bi-patch-plus"></i> Create New Villa Number
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>VillaName</th>
			<th>VillaNumber</th>
			<th>Details</th>
			<th></th>

		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>@obj.Villa.Name</td>
				<td>@obj.Villa_Number</td>
				<td>@obj.Details</td>
				<td>
					<div class="w-100 btn-group" role="group">
						<a class="btn btn-success mx-2" asp-controller="VillaNumber" asp-action="Update" asp-route-VillaNumberId="@obj.Villa_Number">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a class="btn btn-danger mx-2" asp-controller="VillaNumber" asp-action="Delete" asp-route-VillaNumberId="@obj.Villa_Number">
							<i class="bi bi-trach-fill"></i> Delete
						</a>
					</div>
				</td>

			</tr>
		}
	</tbody>
</table>
